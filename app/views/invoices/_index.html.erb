<div class="section nomargin">
  <div class="container clearfix">
    <div class="row">
      <div class="col-lg-1 col-sm-1"></div>
      <div class="col-lg-10 col-sm-10 bottommargin-sm">
        <div class="white-section custom-white-box">
          <h3 class="section-title nomargin">Invoices</h3>
          <div class="divider  divider-rounded divider-right notopmargin"><i class="icon-file-invoice-dollar"></i></div>
          <div class="list-group">
            <% for invoice in current_user.invoices %>
              <% paidclass = invoice.paid? ? 'paid' : 'unpaid' %>
              <%= link_to invoice, class: "list-group-item list-group-item-action flex-column align-items-start invoice invoice_#{paidclass}" do %>
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-2"><%= invoice.number %></h5>
                  <small class="<%= invoice.paid? ? 'text-success' : 'text-danger' %>"><%= invoice.paid? ? "Paid" : "Unpaid" %></small>
                </div>
                <small class="mb-1"><%= invoice&.date&.strftime("%m/%d/%Y") %></small>
              <% end %>
            <% end %>
          </div>
          <%# for invoice in current_user.invoices %>
<!--            <div class="invoice invoice_<%#= invoice.paid? ? "paid" : "unpaid" %>"><%#= link_to invoice.date.strftime("%m/%d/%Y"), invoice %> - <%#= invoice.amount %> - <%#= invoice.paid? ? "Paid" : "Unpaid" %></div>-->
          <%# end %>
          <% if current_user.invoices.empty? %>
            <div class="bottommargin-sm">You are on the free plan.</div>
            <div>
              <% if current_user.no_paymentmethods? %>
                <%= link_to "Upgrade / Add Credit Card", new_paymentmethod_path, class: 'noleftmargin button button-large', remote: true %>
              <% else %>
                <%= link_to "Upgrade", '/plans/', class: 'noleftmargin button button-large' %>
              <% end %>
            </div>
          <% else %>
            <div class="mt-3"><a href="/plans/" class="noleftmargin button button-large">Change Plan</a></div>
            <% if current_user.subscription_id != current_user.current_subscription_id %>
              <%# User can change their plan, but it doesn't take affect until the next time they would have been billed. %>
              <div class="allmargin-sm text-center">Your plan will change to <b><%= current_user.subscription&.name %></b> at the end of your current billing cycle.</div>
            <% else %>
              <div class="allmargin-sm text-center">Current plan: <b><%= current_user.current_subscription.name %></b>.</div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-1 col-sm-1"></div>
    </div>
  </div>
</div>