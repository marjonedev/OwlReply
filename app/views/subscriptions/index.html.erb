<section id="page-title" class="nobg">

  <div class="container clearfix">
    <h1>Plans</h1>
  </div>

</section><!-- #page-title end -->

<section id="content">

  <div class="content-wrap nopadding">
    <div class="section nomargin nobottompadding">
      <div class="container clearfix">
        <div class="row">
          <div class="col-lg-1 col-sm-1"></div>
          <div class="col-lg-10 col-sm-10 bottommargin-sm">
            <div class="white-section custom-white-box">
              <div>
                <table class="table">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Frequency</th>
                    <th style="width: 120px;">Recommended</th>
                    <th colspan="2">Actions</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @subscriptions.each do |subscription| %>
                    <tr>
                      <td><%= subscription.name %></td>
                      <td><%= subscription.price %></td>
                      <td><%= frequency_str(subscription.frequency) %></td>
                      <td><%= recommended_str(subscription.id, subscription.recommended) %></td>
                      <td style="width: 25px"><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
                      <td style="width: 75px"><%= link_to 'Remove', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>

                <%= link_to 'New Plan', new_subscription_path, class: "button" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <link rel="stylesheet" href="/css/components/radio-checkbox.css" type="text/css" />
<% end %>


<% content_for :javascript_footer_includes do %>

<% end %>