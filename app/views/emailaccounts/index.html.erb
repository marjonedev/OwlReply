<p id="notice"><%= notice %></p>

<section id="page-title">

  <div class="container clearfix">
    <h1>Accounts</h1>
    <h2>Add your email accounts here.</h2>
  </div>

</section><!-- #page-title end -->

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">

      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Address</th>
            <th>Password</th>
            <th>Encrypted password</th>
            <th>Encryption key</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @emailaccounts.each do |emailaccount| %>
            <tr>
              <td><%= emailaccount.user_id %></td>
              <td><%= emailaccount.address %></td>
              <td><%= emailaccount.password %></td>
              <td><%= emailaccount.encrypted_password %></td>
              <td><%= emailaccount.encryption_key %></td>
              <td><%= link_to 'Show', emailaccount %></td>
              <td><%= link_to 'Edit', edit_emailaccount_path(emailaccount) %></td>
              <td><%= link_to 'Destroy', emailaccount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Emailaccount', new_emailaccount_path, onclick: '$(".emailaccount_x").toggle();return false;', class: 'emailaccount_x' %>
      <div class="emailaccount_x" style="display: none;">
        <%= render "emailaccounts/new" %>
        <a href="#" onclick="$('.emailaccount_x').toggle();return false;">Cancel</a>
      </div>

    </div>
  </div>
</section>
