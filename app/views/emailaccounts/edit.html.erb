<h1>Editing Emailaccount</h1>

<%= form_for @emailaccount, html: {id: 'add_emailaccount_form', class: 'nobottommargin', name: 'add_emailaccount_form'} do |f| %>
  <div class="col_full">
    <label for="email_address">Address:</label>
    <%= f.text_field :address, class: 'form-control required', id: 'address', required: 'required' %>
  </div>

  <div class="col_full">
    <label for="username">Password:</label>
    <%= f.text_field :password, class: 'form-control required', id: 'password', required: 'required' %>
  </div>

  <div class="col_full">
    <label for="password">Encrypted Password:</label>
    <%= f.text_field :encrypted_password, class: 'form-control required', id: 'encrypted_password', required: 'required' %>
  </div>

  <div class="col_full">
    <label for="password">Encryption Key:</label>
    <%= f.text_field :encryption_key, class: 'form-control required', id: 'encryption_key', required: 'required' %>
  </div>

  <div class="col_full nobottommargin">
    <button class="button button-3d button-black nomargin" id="emailaccount-form-submit" name="emailaccount-form-submit" value="Update">Update</button>
  </div>
<% end %>

<%= link_to 'Show', @emailaccount %> |
<%= link_to 'Back', emailaccounts_path %>
