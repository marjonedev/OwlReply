<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <h1><%= @emailaccount.address %></h1>
    <%= link_to 'Edit', edit_emailaccount_path(@emailaccount) %> - <%= link_to 'All Accounts', emailaccounts_path %>
  </div>

</section><!-- #page-title end -->

<!-- Content
============================================= -->
<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="divcenter nobottommargin clearfix" style="max-width: 550px;">
        <div class="acc_content clearfix">
          <%# for emailreply in Emailaccount.emailreplies %>
            <%# render emailreply %>
          <%# end %>
          <h3>Keyword Suggestions</h3>
          <%# This should check if any of these are already used and then not show them. The list should probably be rendered from a [] array somewhere. %>
          <a href="#">Refund+</a> <a href="#">Sales+</a> <a href="#">Hours+</a>
          <h3>Template</h3>
          <textarea>
            Hello,

            Thank you for emailing our company. We are happy to hear from you, and I'm happy to be here to help.

            %%response%%

            Thank you for reaching out.

            Sincerely,

            Customer Service
            info@company.com
          </textarea>
        </div>
      </div>
    </div>
  </div>
</section><!-- #content end -->
