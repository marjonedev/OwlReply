<!-- Page Title
============================================= -->
<section id="page-title" class="nobg">

  <div class="container clearfix">
    <h1>My Account</h1>
  </div>

</section><!-- #page-title end -->

<section id="content">

  <div class="content-wrap nopadding">
    <div class="section nomargin">
      <div class="container clearfix">
        <div class="row">
          <div class="col-lg-1 col-sm-1"></div>
          <div class="col-lg-10 col-sm-10 bottommargin-sm">
            <div class="white-section custom-white-box">
              <h3 class="section-title nomargin">Details</h3>
              <div class="divider  divider-rounded divider-right notopmargin"><i class="icon-file-invoice-dollar"></i></div>
              <% if notice %>
                <div class="style-msg successmsg">
                  <div class="sb-msg"><%= notice %></div>
                </div>
              <% end %>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                  <div class="static-value"><%= @user.username %></div>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                  <div class="static-value"><%= @user.email_address %></div>
                </div>
              </div>
              <div>
                <%= link_to edit_user_path(@user), :class => "edit-section" do %>
                  <%= content_tag :i, "", :class => "icon-edit2" %> Edit
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-lg-1 col-sm-1"></div>
        </div>
      </div>
    </div>

    <%= render partial: "invoices/index" %>

  </div>

</section>
