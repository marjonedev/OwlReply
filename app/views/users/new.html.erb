

<!-- Page Title
============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <h1>Sign Up</h1>
  </div>

</section><!-- #page-title end -->

<!-- Content
============================================= -->
<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">

      <div class="divcenter nobottommargin clearfix" style="max-width: 550px;">

        <% if @user.errors.any? %>
        <div class="style-msg2 errormsg">
          <div class="msgtitle">Oops! There's an error upon submitting.</div>
          <div class="sb-msg">
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <% end %>

        <div class="acc_content clearfix">
            <%= form_with(model: @user, html: {id: 'register-form', class: 'nobottommargin', name: 'register-form'}, local: true) do |f| %>

            <div class="col_full">
              <label for="email_address">Email Address:</label>
              <%= f.text_field :email_address, class: 'form-control required', id: 'email_address', required: 'required' %>
            </div>

            <!--<div class="col_full">
              <label for="username">Choose a Username:</label>
              <%= f.text_field :username, class: 'form-control required', id: 'username', required: 'required' %>
            </div>

            <div class="col_full">
              <label for="password">Choose Password:</label>
              <%= f.password_field :password, class: 'form-control required', id: 'password', required: 'required' %>
            </div>-->

            <input type="hidden" name="user[referer]" value="<%= cookies[:referer] %>" />

            <div class="col_full nobottommargin">
              <button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" value="register">Get Started</button>
            </div>

          <% end %>
        </div>
      </div>

    </div>

  </div>

</section><!-- #content end -->


