<div class="row <%= dom_id(reply) %>" id="<%= dom_id(reply) %>">
  <div class="col-md-12 bottommargin-sm">
    <div class="white-section custom-white-box nopadding">
      <div class="card active">
        <div class="card-body">
          <%= form_with model: (reply || reply = Reply.new), id: dom_id(reply, 'edit'), url: emailaccount_reply_url(@emailaccount, reply), html:{class: 'nobottommargin reply_form'} do |f| %>
            <% if reply.errors.any? %>
              <div class="style-msg2 errormsg">
                <div class="msgtitle">Oops! There's an error upon submitting.</div>
                <div class="sb-msg">
                  <ul>
                    <% reply.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
            <div class="form-group">
              <label>Reply to these keywords in your email</label>
              <%= f.text_field :keywords, class: 'form-control keywords', data: {role: 'tagsinput'} %>
            </div>
            <div class="form-group">
              <label>Where should we look for the keywords?</label>
               <select name="reply[search]" class="form-control">
                <option value="Subject and Body" <%= reply.search == "Subject and Body" ? 'selected="selected"' : '' %>>Subject and Body</option>
                <option value="Subject Only" <%= reply.search == "Subject Only" ? 'selected="selected"' : '' %>>Subject Only</option>
                <option value="Body Only" <%= reply.search == "Body Only" ? 'selected="selected"' : '' %>>Body Only</option>
              </select>
            </div>
            <div class="form-group mb-1">
              <label>Write the content of the automated reply</label>
              <div>
                <%= f.text_area :body, class: 'form-control' %>
              </div>
            </div>
            <div class="mb-3 text-left">
              <%= link_to 'Preview', '#', :remote => true, :class => 'button_preview button button-amber button-small nomargin' %>
            </div>
            <div class="card-footer norightpadding">
              <%= f.submit 'Save', :class => 'button button-large nomargin submit_btn' %>
              <%= link_to 'Cancel', emailaccount_reply_path(reply), :remote => true, :class => 'cancel_edit button button-white button-light button-large' %>
              <%= link_to 'Remove', emailaccount_reply_url(@emailaccount, reply), remote: true, method: :delete, data: {confirm: "Are you sure to delete this reply?"}, class: 'button button-large button-red float-right' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>