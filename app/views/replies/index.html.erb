<% if @emailaccount.password.blank? %>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      You need to add your password for OwlReply to check your incoming mail.<br>
      OwlReply will mark all incoming mail as "Read".<br>
    </div>
  </div>
<% end %>


<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10 add-reply">
    <%= link_to raw('<i class="icon-plus-sign"></i><span>Add New Automated Reply</span>'), new_emailaccount_reply_path(@emailaccount), class: "button button-rounded button-reveal button-small button-dirtygreen", id: "addnew_reply", remote: true %>
  </div>
  <div class="col-md-1"></div>
</div>

<div id="replies_container">
<% @replies.each do |reply| %>
  <%= render reply %>
<% end %>
</div>
