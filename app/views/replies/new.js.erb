if(!$('.replies_container .new_reply').length){
    $("<%= j render 'new', reply: @reply %>").prependTo('#replies_container').hide().slideDown();
    $('#new_reply').find('input.keywords').tagsinput();
}else{
    $('#new_reply').addClass( "custom_shake" );

    $('#new_reply').on('webkitAnimationEnd oanimationend msAnimationEnd animationend', function(e){
        $('#new_reply').delay(500).removeClass('custom_shake');
    });
}


$('a.cancel_new').on('click', function (e) {
    e.preventDefault();
    $(this).closest('#new_reply').slideToggle('slow').delay(200).remove();
})
Replymaker.show_suggestions();