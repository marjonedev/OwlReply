if(!$('.new_reply_container .new_reply').length){
    $('.new_reply_container').html("<%= j render 'new', reply: @reply %>").slideDown();
    $('.new_reply_container .new_reply').find('input.keywords').tagsinput();
}else{
    $('.new_reply_container > .new_reply').addClass( "custom_shake" );

    $('.new_reply_container > .new_reply').on('webkitAnimationEnd oanimationend msAnimationEnd animationend', function(e){
        $(this).delay(500).removeClass('custom_shake');
    });
}
Replymaker.show_suggestions($('.new_reply_container'));

$(document).on('click', 'a.cancel_new', function (e) {
    e.preventDefault();
    alert('cancel 1');
    $(this).closest('.new_reply').slideToggle('slow').delay(200).remove();
});