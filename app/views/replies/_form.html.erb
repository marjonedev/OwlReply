<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10 bottommargin-sm">
    <div class="white-section custom-white-box nopadding">
      <div class="card">
        <div class="card-body">
          <%= form_with model: (reply || reply = Reply.new), html: {class: 'nobottommargin reply_form'} do |f| %>
            <% if reply.errors.any? %>
              <div class="style-msg2 errormsg">
                <div class="msgtitle">Oops! There's an error when saving your Reply.</div>
                <div class="sb-msg">
                  <ul>
                    <% reply.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
            <div class="form-group readonly">
              <label>Reply to these keywords in your email</label>
              <%= f.text_field :keywords, class: 'form-control keywords', data: {role: 'tagsinput'} %>
            </div>
            <div class="form-group">
              <label>Where should we look for the keywords?</label>
              <%= f.text_field :search, class: 'form-control readonly', readonly: 'readonly' %>
            </div>
            <div class="form-group">
              <label>Write the content of the automated reply</label>
              <div class="template_top template_partial"><%= reply.emailaccount&.template_top %></div>
              <div>
                <%= f.text_area :body, class: 'form-control' %>
              </div>
              <div class="template_bottom template_partial"><%= reply.emailaccount&.template_bottom %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>