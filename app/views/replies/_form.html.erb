<%= form_with model: (reply || reply = Reply.new), html:{class: 'nobottommargin'} do |form| %>
  <% if reply.errors.any? %>
    <div class="style-msg2 errormsg">
      <div class="msgtitle">Opps! There's an error upon submitting.</div>
      <div class="sb-msg">
        <ul>
          <% reply.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col_full">
    <%= form.label :keywords %>
    <%= form.text_field :keywords, class: 'form-control', id: 'keywords' %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', id: 'keywords' %>
  </div>

  <div class="field">
    <%= form.label :negative_keywords %>
    <%= form.text_field :negative_keywords, class: 'form-control', id: 'keywords' %>
  </div>

  <div class="field">
    <%= form.label :catchcall %>
    <%= form.check_box :catchcall, class: 'form-control', id: 'keywords' %>
  </div>

  <div class="actions col_full nobottommargin">
    <%= form.submit reply.new_record? ? 'Add New' : 'Save', :class => 'button button-3d button-black nomargin' %>
  </div>
<% end %>
