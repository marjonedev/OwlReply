<section id="page-title">

  <div class="container clearfix">
    <h1>All Replies</h1>
  </div>

</section><!-- #page-title end -->

<section id="content" class="admin">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="table-responsive">
        <table id="repliesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th style="width: 17%">User</th>
            <th style="width: 17%">Email Account</th>
            <th style="width: 30%">Keywords</th>
            <th style="width: 12%">Search</th>
            <th style="width: 12%">Drafts Created Today</th>
            <th style="width: 12%">Drafts Created Lifetime</th>
          </tr>
          </thead>
          <!--<tfoot>
          <tr>
            <th>User</th>
            <th>Address</th>
            <th>Drafts Created Today</th>
            <th>Drafts Created Lifetime</th>
            <th>Drafts Missing Replies</th>
          </tr>
          </tfoot>-->
          <tbody>
          <% @replies.each do |reply| %>
            <tr>
              <td><%= reply.emailaccount.user.email_address %></td>
              <td><%= reply.emailaccount.address %></td>
              <td><%= reply.keywords %></td>
              <td><%= reply.search.nil? ? 'Subject and Body' : reply.search %></td>
              <td><%= reply.drafts_created_today.to_i %></td>
              <td><%= reply.drafts_created_lifetime.to_i %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <link rel="stylesheet" href="/css/components/bs-datatable.css" type="text/css" />
  <script src="/js/components/bs-datatable.js"></script>
<% end %>

<% content_for :javascript_footer_includes do %>
  <script>
      $(document).ready(function() {
          $('#repliesTable').dataTable();
      });
  </script>
<% end %>