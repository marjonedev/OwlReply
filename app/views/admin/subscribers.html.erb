<section id="page-title">

  <div class="container clearfix">
    <h1>Subscribers</h1>
  </div>

</section><!-- #page-title end -->

<section id="content" class="admin">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="table-responsive">
        <table id="repliesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>User</th>
            <th>Subscription</th>
            <th>Start Date</th>
            <th>Next Charge On</th>
            <th>Invoices</th>
          </tr>
          </thead>
          <tbody>
          <% @subscribers.each do |user| %>
            <tr>
              <td><%= user.email_address %></td>
              <td><%= user.subscription.name %></td>
              <td><%= user.subscription_start_date.strftime("%b %d, %Y") %></td>
              <td><%= user.next_subscription_charge_on.strftime("%b %d, %Y") %></td>
              <td><%= user.invoices.count %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <link rel="stylesheet" href="/css/components/bs-datatable.css" type="text/css" />
  <script src="/js/components/bs-datatable.js"></script>
<% end %>

<% content_for :javascript_footer_includes do %>
  <script>
      $(document).ready(function() {
          $('#repliesTable').dataTable();
      });
  </script>
<% end %>