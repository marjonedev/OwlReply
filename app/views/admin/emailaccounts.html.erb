<section id="page-title">

  <div class="container clearfix">
    <h1>All Email Accounts</h1>
  </div>

</section><!-- #page-title end -->

<section id="content" class="admin">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="table-responsive">
        <table id="emailAccountsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>User</th>
            <th>Address</th>
            <th>Drafts Created Today</th>
            <th>Drafts Created Lifetime</th>
            <th>Drafts Missing Replies</th>
            <th>Created At</th>
          </tr>
          </thead>
          <!--<tfoot>
          <tr>
            <th>User</th>
            <th>Address</th>
            <th>Drafts Created Today</th>
            <th>Drafts Created Lifetime</th>
            <th>Drafts Missing Replies</th>
          </tr>
          </tfoot>-->
          <tbody>
          <% @emailaccounts.each do |account| %>
            <tr>
              <td><%= link_to account.user.email_address, "/admin/emailaccounts/#{account.id}" %></td>
              <td><%= account.address %></td>
              <td><%= account.drafts_created_today.to_i %></td>
              <td><%= account.drafts_created_lifetime.to_i %></td>
              <td><%= account.drafts_missing_replies_today.to_i %></td>
              <td data-order="<%= account.created_at.to_i %>"><%= account.created_at.strftime("%b %d, %Y") %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <link rel="stylesheet" href="/css/components/bs-datatable.css" type="text/css" />
  <script src="/js/components/bs-datatable.js"></script>
<% end %>

<% content_for :javascript_footer_includes do %>
  <script>
      $(document).ready(function() {
          $('#emailAccountsTable').dataTable({
            "order": [[ 5, "desc" ]]
          });
      });
  </script>
<% end %>