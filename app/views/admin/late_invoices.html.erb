<section id="page-title">

  <div class="container clearfix">
    <h1>Subscribers</h1>
  </div>

</section><!-- #page-title end -->

<section id="content" class="admin">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="table-responsive">
        <table id="repliesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
          <tr>
            <th>Invoice Number</th>
            <th>User</th>
            <th>Subscription</th>
            <th>Amount Due</th>
            <th>Invoice Date</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @invoices.each do |invoice| %>
            <tr>
              <td><%= invoice.number %></td>
              <td><%= invoice.user.email_address %></td>
              <td><%= invoice.subscription.name %></td>
              <td>$<%= invoice.amount / 100 %></td>
              <td data-order="<%= invoice.date.to_time.to_i %>"><%= invoice.date.strftime("%b %d, %Y") %></td>
              <td><%= link_to "Show Invoice", "/admin/show_invoice/#{invoice.id}", class: "button button-mini" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript_includes do %>
  <link rel="stylesheet" href="/css/components/bs-datatable.css" type="text/css" />
  <script src="/js/components/bs-datatable.js"></script>
<% end %>

<% content_for :javascript_footer_includes do %>
  <script>
      $(document).ready(function() {
          $('#repliesTable').dataTable();
      });
  </script>
<% end %>