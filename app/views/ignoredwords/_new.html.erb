<div class="popup block divcenter" style="background-color: #FFF; max-width: 500px;">
  <h3 class="popup-title text-center">New Ignored Word</h3>
  <div class="popup-form nobottomborder">
    <%= form_with model: (ignoredword || ignoredword = Ignoredword.new), html:{class: 'nobottommargin new_ignoredword', id: 'new_ignoredword', multipart: true}, url: ignoredwords_path(@ignoredword), remote: true do |form| %>
      <div class="form-group">
        <label for="card_number">Word</label>
        <%= form.text_field :word, class: 'form-control required', id: 'word', type: 'text', required: 'required' %>
      </div>

      <div class="form-group nobottommargin mt-2">
        <%= form.submit 'Save', class: 'button button-large noleftmargin' %>
        <%= link_to 'Cancel', '#', :remote => true, :class => 'button_cancel button button-white button-light button-large' %>
      </div>
    <% end %>
  </div>
</div>