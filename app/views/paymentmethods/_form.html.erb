<%= form_with model: (paymentmethod || paymentmethod = Paymentmethod.new), remote: true do |form| %>

    <% if paymentmethod.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(paymentmethod.errors.count, "error") %> prohibited this paymentmethod from being saved:</h2>

      <ul>
      <% paymentmethod.errors.full_messages.each do |message| %>
