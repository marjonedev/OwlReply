<div class="popup block divcenter" style="background-color: #FFF; max-width: 350px;">
  <h3 class="popup-title text-center">New Payment Method</h3>
  <div class="popup-form nobottomborder" style="padding: 0 20px;">
    <%= form_with model: (paymentmethod || paymentmethod = Paymentmethod.new), html:{class: 'nobottommargin new_paymentmethod', id: 'new_paymentmethod'}, url: paymentmethods_path(@paymentmethod) do |form| %>

      <div class="form-group">
        <label for="card_number">Card Number</label>
        <%#= form.text_field :card_number, class: 'form-control required', id: 'card_number', type: 'number', required: 'required' %>
        <input class="form-control required cc-number" id="card_number" type="text" required="required" autocomplete="cc-number">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="card_exp_month">Expiration</label>
          <input class="form-control required cc-exp" id="card_expiration" placeholder="MM/YYYY" required="required" type="text" autocomplete="cc-exp">
          <%#= form.text_field :card_exp_year, class: 'form-control required', id: 'card_exp_year', maxlength: 4, placeholder: 'YYYY', required: 'required' %>
        </div>
        <div class="form-group col-md-6">
          <label for="card_cvc">CVC</label>
          <%= form.text_field :card_cvc, class: 'form-control required cc-cvc', id: 'card_cvc', required: 'required', autocomplete: 'off' %>
        </div>
      </div>

      <% if !@paymentmethods.first.nil? %>
      <div class="form-group">
        <div class="form-check">
          <%= form.check_box :default, class: 'form-check-input', id: 'default' %>
          <label class="form-check-label" for="default">
            Default
          </label>
        </div>
      </div>
      <% end %>

      <div class="form-group nobottommargin mt-2 d-flex w-100 justify-content-between">
        <%= form.submit 'Save', class: 'button button-large noleftmargin' %>
        <%= link_to 'Cancel', '#', :remote => true, :class => 'button_cancel button button-white button-light button-large' %>
      </div>
    <% end %>
  </div>
</div>