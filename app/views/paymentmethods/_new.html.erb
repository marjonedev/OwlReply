<div class="block divcenter" style="background-color: #FFF; max-width: 500px;">
  <div class="center" style="padding: 50px;">
    <h3>New Payment Method</h3>
  </div>
  <div class="popup-form nobottomborder">
    <%= form_with model: (paymentmethod || paymentmethod = Paymentmethod.new), html:{class: 'nobottommargin'} do |form| %>
      <div class="form-group">
        <%= form.label :method %>
        <%= form.text_field :method, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :card_name %>
        <%= form.text_field :card_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :card_type %>
        <%= form.text_field :card_type, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :card_exp_date %>
        <%= form.date_select :card_exp_date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Save', class: 'button button-large' %>
        <button class="button-cancel button button-white button-light button-small" type="reset">Cancel</button>
      </div>
    <% end %>
  </div>
</div>