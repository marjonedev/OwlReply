<section id="content">

  <div class="content-wrap">

    <div class="container clearfix">
      <div id="processTabs">
        <ul class="process-steps bottommargin clearfix">
          <li>
            <a href="javascript: void(0)" class="i-circled i-alt divcenter">1</a>
            <h5>Connect your account</h5>
          </li>
          <li>
            <a href="javascript: void(0)" class="i-circled i-alt divcenter">2</a>
            <h5>Preview Messages</h5>
          </li>
          <li class="active">
            <a href="javascript: void(0)" class="i-circled i-alt divcenter bgcolor">3</a>
            <h5>Done</h5>
          </li>
        </ul>
        <div class="activation-process">
          <div class="feature-box fbox-center fbox-plain done">
            <div class="fbox-icon">
              <a href="#"><i class="icon-ok-sign"></i></a>
            </div>
            <h2>Congratulations!</h2>
            <%#= form_with(model: @emailaccount, url: viewer_activate_url(@emailaccount), method: "post", data: {remote: false}) do %>
<!--              <input type="hidden" name="keywords" class="selected_keywords" value="">-->
<!--              <input type="submit" value="Use OwlReply Now" class="submit-keywords button button-large button-rounded button-connect text-white">-->
            <%# end %>

            <%= link_to "Use OwlReply Now", "/viewer/activate/#{@emailaccount.id}", remote: false, method: :patch, class: 'button button-large button-rounded button-connect text-white' %>
          </div>
        </div>
      </div>
  </div>
</div>
</section>

<% content_for :javascript_footer_includes do %>
<script type="text/javascript">
    $(function () {
        $('.btn-connect').on('click', function (e) {
            e.preventDefault();
            $('#ConnectEmailAccount').modal('show');
            return false;
        });

        $('#emailProvider').on('change', function () {
            var value = $(this).val();
            if (value == 'other') {
                $('#smtpSettings').show();
                $('button.button-connect').removeClass('googled');
            } else {
                $('#smtpSettings').hide();
                $('button.button-connect').addClass('googled');
            }
        });
    });
</script>
<% end %>